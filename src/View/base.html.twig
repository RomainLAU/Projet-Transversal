<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}{% endblock %}</title>
    <link href="/assets/style/reset.css" rel="stylesheet" type="text/css" />
    <link href="/assets/style/style.css" rel="stylesheet" type="text/css" />
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    {% block stylesheets %}{% endblock %}
    {% block scripts %}{% endblock %}

</head>
<body id="body">

    <header>
        {% block header %}

                <a href="/" id="logo-home"><img src="/assets/images/logo-blanc.png" alt="logo-bee-brave"></a>
                
                {% if session and session.user.role == "user" %}
                
                    <nav class="nav-co">
            
                        <li><a href="/journey">Trajets</a></li>
                        <li><a href="/associations">Associations</a></li>
                        <li><a href="/account">Mon compte</a></li>
            
                    </nav>

                {% elseif session and session.user.role == "admin" %}


                    <nav class="nav-admin">
                
                        <li><a href="/admin/journey">Trajets</a></li>
                        <li><a href="/admin/associations">Associations</a></li>
                        <li><a href="/admin/donations">Dons</a></li>
                        <li><a href="/admin/users">Comptes</a></li>
            
                    </nav>

                {% endif %}
    

                <div class="cote">
                    {% if session %}

                    <a href="/deconnection">Deconnexion</a>

                    {% else %}

                    <a href="/login">S'identifier</a>

                    {% endif %}

                    <div class="dl">
                        <a href="#">Télécharger l'application</a>
                    </div>

                </div>
    
        {% endblock %}
    </header>
    

{% block content %}
{% endblock %}

{% block footer %}
    <footer id="contact">
        
        <img src="/assets/images/logo-blanc.png">

        <p id="big-sentence">AVEC L'APPLICATION MOBILE BEEBRAVE, AMELIOREZ VOTRE EXPERIENCE DE VISITE</p>


        <div class="stores-rs">

            <div class="stores">

                <div class="playstore">

                    <a href="https://www.apple.com/fr/store" target="_blank"><img src="/assets/images/playstore.png" alt="logo-playstore"></a>
    
                </div>
    
    
                <div class="applestore">
    
                    <a href="https://play.google.com/store/apps" target="_blank"><img src="/assets/images/applestore.png" alt="logo-applestore"></a>
    
                </div>


            </div>


            <div class="rs">

                <div class="facebook-blanc">

                    <img src="/assets/images/facebook.png" alt="logo-facebook-blanc">

                </div>


                <div class="insta-blanc">

                    <img src="/assets/images/instagram.png" alt="logo-instagram-blanc">

                </div>


            </div>

            


        </div>


        <div class="footer-links">

            <p>CGUS</p>

            <p>Confidentialité</p>            

        </div>



        <div class="footer-contact">


            <div class="contact-tel">

                <div class="icone-tel">

                    <img src="/assets/images/icone-tel.png" alt="icone-blanche-telephone">                    

                </div>

                <p>06 94 18 19 51</p>


            </div>


            <div class="contact-mail">

                <div class="icone-mail">

                    <img src="/assets/images/icone-mail.png" alt="icone-blanche-mail"> 

                </div>


                <p>contact@breebrave.com</p>

                

            </div>



        </div>





        <div class="trait-blanc">

        </div>

        <p class="copyright">©️ 2022 All rights reserved</p>

    </footer>
{% endblock %}
</body>
</html>